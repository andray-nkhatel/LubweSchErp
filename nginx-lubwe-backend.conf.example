# Example nginx config for proxying to the Lubwe backend.
# 405 on POST /api/auth/login usually means /api is not proxied (e.g. nginx serves static or wrong location).
#
# Add this upstream and location to your server block for lubwesecondarysch.com.
# Ensure no other location (e.g. location /) handles /api or returns 405 for POST.

upstream lubwe_backend {
    server 127.0.0.1:8080;
    keepalive 32;
}

server {
    listen 80;
    listen [::]:80;
    listen 443 ssl http2;
    listen [::]:443 ssl http2;
    server_name lubwesecondarysch.com;

    # SSL config here (certificate, etc.)

    # Frontend static files (or proxy to frontend container)
    location / {
        root /var/www/school-client;   # or: proxy_pass http://127.0.0.1:3000;
        try_files $uri $uri/ /index.html;
    }

    # API: proxy to backend. Must allow POST and forward body/headers.
    location /api {
        proxy_pass http://lubwe_backend;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header Connection "";

        # Required for POST body and auth
        proxy_set_header Content-Type $content_type;
        proxy_pass_request_body on;
        proxy_pass_request_headers on;
    }
}
